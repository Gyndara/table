<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
    <TextView
        android:id="@+id/TextTable"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center"
        android:text="Row 3 colum 1"
        android:padding="20dp"
        android:textColor="#000000" />

        <TextView
        android:id="@+id/texttable"
        android:layout_weight="1"
        android:background="#a09f9f"
        android:gravity="center"
        android:padding="20dp"
        android:text="Row 3 colum 2"
        android:textColor="#000000"
        android:paddingBottom="20dp"/>
    </TableRow>

    <TableRow>
        <TextView
        android:layout_weight="1"
        android:background="#a09f"
        android:gravity="center"
        android:padding="20dp"
            android:textStyle="bold"
        android:text="Row 4 colum 3"
        android:textColor="#000000"/>
    </TableRow>

    <TableRow android:background="@color/black">

        <TextView
            android:id="@+id/TextTable1"
            android:layout_weight="1"
            android:background="#a09"
            android:gravity="center"
            android:text="Row 5 colum 4"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="1dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/texttable2"
            android:layout_weight="5"
            android:layout_margin="1dp"
            android:background="#a09"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="Row 5 colum 5"
            android:textColor="#000000"
            android:paddingBottom="20dp"/>


        <TextView
            android:id="@+id/texttable3"
            android:layout_weight="1"
            android:background="#a09"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:padding="20dp"
            android:text="Row 5 colum 6"
            android:textColor="#000000"
            android:paddingBottom="20dp"/>




    </TableRow>


</TableLayout>